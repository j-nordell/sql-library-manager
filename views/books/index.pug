extends ../layout

block content
    h1=title
    p.button
        a(href='/books/new') New Book
    include search_form
    if(search && books.length==0)
        include no-results
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td
                        a(href="/books/" + book.id) #{book.title}
                    td=book.author
                    td=book.genre
                    td=book.year